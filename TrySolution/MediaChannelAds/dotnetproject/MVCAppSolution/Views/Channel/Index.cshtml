@model IEnumerable<BookStoreApp.Models.Channel>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Channel Id</th>
                <th>Channel Name</th>
                <th>POC Name</th>
                <th>Commercial Per Ad</th>
                <th>MailID</th>
                <th>ContactNumber</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Channel channel in Model)
            {
                <tr>
                    <td>@channel.ChannelID</td>
                    <td>@channel.ChannelName</td>
                    <td>@channel.POCName</td>
                    <td>@channel.CommercialPerAd</td>
                     <td>@channel.MailID</td>
                      <td>@channel.ContactNumber</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@channel.ChannelID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Channels found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">