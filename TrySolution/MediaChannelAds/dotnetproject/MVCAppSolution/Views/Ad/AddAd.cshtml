@model BookStoreApp.Models.Ad

@{
    ViewData["Title"] = "Add Ad";
}

<h2>Add Ad Details </h2>

<form asp-controller="Ad" asp-action="AddAd" method="post">
    <div class="form-group">
        <label for="BrandName">Ad Name</label>
        <input type="text" class="form-control" id="BrandName" name="BrandName" required>
    </div>
    <div class="form-group">
        <label for="NumberOfTimes">Number Of Times</label>
        <input type="number" class="form-control" id="NumberOfTimes" name="NumberOfTimes" required>
    </div>
    <div class="form-group">
        <label for="BroadcastDate">Broadcast Date</label>
         <input type="date" class="form-control" id="BroadcastDate" name="BroadcastDate" required>
    </div>
    <div class="form-group">
        <label for="Duration">Duration</label>
        <input type="number" class="form-control" id="Duration" name="Duration" required>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" required>
    </div>
    <div class="form-group">
    <label for="ChannelName">Channel Name</label>
    <select class="form-control" id="ChannelName" name="ChannelName" required>
        <option value="">Select Channel</option>
    </select>
</div>
    <button type="submit" class="btn btn-primary">Add Ad</button>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Define a function to fetch job titles and populate the dropdown
        function populateChannelNames() {
            $.ajax({
                url: 'https://localhost:7266/api/Channel/ChannelNames', // Replace with the actual URL of your Web API endpoint
                method: 'GET',
                success: function (data) {
                    var dropdown = $('#ChannelName');
                    dropdown.empty();
                    dropdown.append($('<option>').val('').text('Select ChannelName'));
                    $.each(data, function (key, entry) {
                        dropdown.append($('<option>').val(entry).text(entry));
                    });
                },
                error: function () {
                    console.error('Error fetching ChannelName from the API.');
                }
            });
        }

        // Call the function to populate the dropdown when the page loads
        populateChannelNames();
    });
</script>
