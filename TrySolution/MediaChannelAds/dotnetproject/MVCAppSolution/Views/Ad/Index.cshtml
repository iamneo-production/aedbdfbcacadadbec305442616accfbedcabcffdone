@model IEnumerable<BookStoreApp.Models.Ad>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ad Id</th>
                <th>Brand Name</th>
                <th>Number Of Times</th>
                <th>Broadcast Date</th>
                <th>Duration</th>
                <th>Description</th>
                <th>Channel Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ad ad in Model)
            {
                <tr>
                    <td>@ad.AdID</td>
                    <td>@ad.BrandName</td>
                    <td>@ad.NumberOfTimes</td>
                    <td>@ad.BroadcastDate.Date.ToString("dd-MM-yyyy")</td>
                    <td>@ad.Duration</td>
                    <td>@ad.Description</td>
                    <td>@ad.ChannelName</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@ad.AdID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Ads found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">